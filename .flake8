[flake8]
select = B,B9,C,D,DAR,E,F,N,RST,S,W
ignore = E203,E501,RST201,RST203,RST301,W503,D107
max-line-length = 80
max-complexity = 10
docstring-convention = google
exclude =
        tests/*
        docs/*
        setup.py
        noxfile.py
        punq/_compat.py
rst-roles = class,const,func,meth,mod,ref
rst-directives = deprecated
